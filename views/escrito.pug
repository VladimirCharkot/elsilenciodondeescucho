  script(src="/js/hammer.min.js")
  script.
    var hammertime = new Hammer(document.querySelector('body'));
    hammertime.get('pinch').set({ enable: true });
    hammertime.get('pan-x').set({ enable: true });
    hammertime.get('pan-y').set({ enable: true });
    
    hammertime.on('pinch', (ev) => {
      
      let tamaneo = parseInt(document.documentElement.style.fontSize ? document.documentElement.style.fontSize : "12px")
      tamaneo = tamaneo < 12 ? 12 : tamaneo
      tamaneo = tamaneo > 90 ? 90 : tamaneo
      if(ev.scale > 1){
        document.documentElement.style.fontSize = `${tamaneo+1}px`
      }else{
        document.documentElement.style.fontSize = `${tamaneo-1}px`
      }
      
    });

  
    
  
    let corregir_imagenes = () => {
      document.querySelectorAll('p img').forEach(i => {
          let d = document.createElement('div')
          d.classList.add('ventana')
          console.log(i.getAttribute('src'))
          d.style.setProperty('--url-imagen', `url(${i.getAttribute('src')})`)
          i.parentElement.replaceWith(d)
          i.style.opacity = 0
          d.appendChild(i)
        }) 
      }
      window.addEventListener('load', corregir_imagenes)
    

